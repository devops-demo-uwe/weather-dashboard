{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WeatherApi": {
    "BaseUrl": "https://api.openweathermap.org/data/2.5",
    "GeocodingBaseUrl": "https://api.openweathermap.org/geo/1.0",
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelayMs": 1000,
    "EnableCaching": true,
    "CacheDurationMinutes": 10,
    "UserAgent": "WeatherDashboard/1.0",
    "Units": "metric",
    "Language": "en"
  },
  "AzureStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "FavoritesTableName": "Favorites"
  }
}
